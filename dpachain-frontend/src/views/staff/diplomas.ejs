<div class="container">
    <h2 class="mt-4 mb-3">List of Diplomas</h2>

    <% if (typeof error !=='undefined' ) { %>
        <div class="alert alert-danger">
            <strong>Error:</strong>
            <%= error.msg %>
        </div>
        <% } %>

            <% if (typeof blocks !=='undefined' && typeof labels !=='undefined' ) { %>
                <div class="table-responsive mt-4">
                    <table class="table table-striped table-bordered align-middle text-center">
                        <thead class="table-dark">
                            <tr>
                                <% labels.forEach(label=> { %>
                                    <th scope="col">
                                        <%= label %>
                                    </th>
                                    <% }) %>
                            </tr>
                        </thead>
                        <tbody>
                            <% blocks.forEach(block=> { %>
                                <tr>
                                    <% block.forEach((field, index)=> {
                                        const label = labels[index];
                                        %>
                                        <td class="text-break">
                                            <% if (label==='Hash' ) { %>
                                                <a
                                                    href="/user/validate_diploma?block_hash=<%= encodeURIComponent(field.value) %>">
                                                    <%= field.value %>
                                                </a>
                                                <% } else { %>
                                                    <%= field.value %>
                                                        <% } %>
                                        </td>
                                        <% }) %>
                                </tr>
                                <% }) %>
                        </tbody>

                    </table>
                </div>
                <% } %>

                    <a href="/user" class="btn btn-secondary mt-3">Back to User Home</a>
</div>