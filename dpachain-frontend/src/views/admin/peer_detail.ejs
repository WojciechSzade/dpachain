<div class="container mt-4">
  <h2>Peer Detail</h2>
  <% if (error) { %>
    <div class="alert alert-danger"><%= error %></div>
  <% } else if (message) { %>
    <div class="alert alert-success"><%= message %></div>
  <% } %>

  <% if (peer) { %>
    <ul class="list-group">
      <li class="list-group-item"><strong>Nickname:</strong> <%= peer.nickname %></li>
      <li class="list-group-item"><strong>Address:</strong> <%= peer.address %></li>
      <li class="list-group-item"><strong>Status:</strong> <%= peer.status %></li>
      <li class="list-group-item"><strong>Authorized:</strong> <%= peer.is_authorized ? 'Yes' : 'No' %></li>
      <li class="list-group-item">
        <strong>Public Key:</strong>
        <pre class="mb-0" style="white-space: pre-wrap; word-break: break-word;"><%= peer.public_key %></pre>
      </li>
    </ul>

    <div class="mt-3">
      <form method="POST" action="/admin/peer/<%= encodeURIComponent(peer.nickname) %>/remove" style="display:inline-block;">
        <button type="submit" class="btn btn-danger">Remove Peer</button>
      </form>
        <form method="POST" action="/admin/peer/<%= encodeURIComponent(peer.nickname) %>/ban" style="display:inline-block; margin-left:10px;">
          <button type="submit" class="btn btn-warning">Ban Peer</button>
        </form>
        <form method="POST" action="/admin/peer/<%= encodeURIComponent(peer.nickname) %>/unban" style="display:inline-block; margin-left:10px;">
          <button type="submit" class="btn btn-success">Unban Peer</button>
        </form>
    </div>
  <% } %>

  <a href="/admin/get_peers_list" class="btn btn-secondary mt-3">Back to Peers List</a>
</div>